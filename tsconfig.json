{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2017",
    "module": "es2020",
    "moduleResolution": "node",
    "lib": ["es2020", "dom"],
    "strict": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node", "obsidian"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}

